    <!-- 회원상세 -->
    <select id="detailU" resultType="UserDTO">
        select user_id as user_id,
        password as password,
        usertype as usertype,
        username as username,
        nickname as nickname,
        email as email,
        phone as phone,
        birthday as birthday,
        gender as gender,
        postno as postno,
        address as address
        from User_j
        where user_id = #{user_id}
    </select>

